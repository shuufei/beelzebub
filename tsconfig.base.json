{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@beelzebub/card/ui": ["libs/card/ui/src/index.ts"],
      "@beelzebub/deck/domain": ["libs/deck/domain/src/index.ts"],
      "@beelzebub/deck/ui": ["libs/deck/ui/src/index.ts"],
      "@beelzebub/shared/api": ["libs/shared/api/src/index.ts"],
      "@beelzebub/shared/db": ["libs/shared/db/src/index.ts"],
      "@beelzebub/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@beelzebub/shared/errors": ["libs/shared/errors/src/index.ts"],
      "@beelzebub/shared/libs": ["libs/shared/libs/src/index.ts"],
      "@beelzebub/shared/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
